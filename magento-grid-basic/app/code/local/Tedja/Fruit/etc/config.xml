<?xml version="1.0"?>

<config>
    <modules>
        <Tedja_Fruit>
            <version>0.0.1</version>
        </Tedja_Fruit>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <fruit before="Mage_Adminhtml">Tedja_Fruit_Adminhtml</fruit>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <fruit>
                    <file>fruit.xml</file>
                </fruit>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <fruit>
                <class>Tedja_Fruit_Block</class>
            </fruit>
        </blocks>
        <models>
            <fruit>
                <class>Tedja_Fruit_Model</class>
                <resourceModel>fruit_resource</resourceModel>
            </fruit>
            <fruit_resource>
                <class>Tedja_Fruit_Model_Resource</class>
                <entities>
                    <fruit>
                        <table>fruit</table>
                    </fruit>
                </entities>
            </fruit_resource>
        </models>
        <resources>
            <fruit_setup>
                <setup>
                    <module>Tedja_Fruit</module>
                </setup>
            </fruit_setup>
        </resources>
    </global>
</config>
